<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.splash.SplashScreenFragment">
    <ImageView
        android:id="@+id/iv_pokeball"
        android:layout_width="@dimen/dimens_200dp"
        android:layout_height="@dimen/dimens_200dp"
        android:src="@drawable/img_pokeball"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_my_pokemon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:importantForAccessibility="no" />
    <TextView
        android:id="@+id/tv_my_pokemon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/text_30sp"
        android:text="@string/my_pokemon"
        app:layout_constraintTop_toBottomOf="@id/iv_pokeball"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>