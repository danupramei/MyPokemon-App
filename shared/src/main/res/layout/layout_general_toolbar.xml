<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/dimens_4dp"
    app:cardCornerRadius="0dp"
    app:cardBackgroundColor="@color/transparent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/transparent"
            app:elevation="0dp">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_telemedicine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:popupTheme="@drawable/background_rounded_white_5dp"/>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/iv_btn_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/dimens_8dp"
                android:layout_margin="@dimen/dimens_8dp"
                android:background="@drawable/ripple_toolbar_back"
                android:clipChildren="false"
                android:src="@drawable/ic_arrow_left_white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="ContentDescription" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_photo_patient_chat"
                android:layout_width="@dimen/dimens_32dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dimens_8dp"
                app:layout_constraintStart_toEndOf="@id/iv_btn_back"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_title_start"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/dimens_8dp"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/text_18sp"
                android:ellipsize="end"
                android:singleLine="true"
                android:background="@android:color/transparent"
                app:layout_constraintStart_toEndOf="@id/civ_photo_patient_chat"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/iv_padding"/>
            <ImageView
                android:id="@+id/iv_padding"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/dimens_8dp"
                android:layout_margin="@dimen/dimens_8dp"
                android:clipChildren="false"
                android:visibility="invisible"
                android:src="@drawable/ic_arrow_left_white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="ContentDescription" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>